<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" android:layout_height="fill_parent"
              android:paddingTop="15dip" android:paddingBottom="15dip"
              android:orientation="vertical">

    <ImageButton android:id="@+id/agenda_summary_exposition"
                 android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginBottom="15dip"
                 android:src="@drawable/btn_agenda_exposition"
                 android:background="@android:color/transparent"/>

    <ImageButton android:id="@+id/agenda_summary_activities"
                 android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginBottom="15dip"
                 android:src="@drawable/btn_agenda_activities"
                 android:background="@android:color/transparent"/>

    <ImageButton android:id="@+id/agenda_summary_shows"
                 android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginBottom="15dip"
                 android:src="@drawable/btn_agenda_shows"
                 android:background="@android:color/transparent"/>

    <ImageButton android:id="@+id/agenda_summary_sport"
                 android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:src="@drawable/btn_agenda_sport"
                 android:background="@android:color/transparent"/>

</LinearLayout>